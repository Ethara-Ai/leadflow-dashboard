# =============================================================================
# ZOOLAB DASHBOARD - DEVELOPMENT ENVIRONMENT
# =============================================================================
# This file contains development environment variables for local development.
# Copy to .env.local for personal overrides (not committed to git).
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
VITE_APP_ENV=development
VITE_APP_NAME=ZOOLAB Dashboard (Dev)
VITE_APP_VERSION=1.0.0-dev
VITE_APP_URL=http://localhost:5173
VITE_BASE_PATH=/

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_VERSION=v1
VITE_API_TIMEOUT=60000
VITE_WS_URL=ws://localhost:3001

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
VITE_AUTH_PROVIDER=local
VITE_AUTH_DOMAIN=
VITE_AUTH_CLIENT_ID=
VITE_AUTH_AUDIENCE=
VITE_AUTH_REDIRECT_URI=http://localhost:5173/callback
VITE_SESSION_TIMEOUT=0
VITE_CSRF_ENABLED=false

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_NOTES=true
VITE_FEATURE_ALERTS=true
VITE_FEATURE_CHARTS=true
VITE_FEATURE_WELCOME_MESSAGE=true
VITE_FEATURE_PWA=false

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Disabled in development)
# -----------------------------------------------------------------------------
VITE_GA_MEASUREMENT_ID=
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_LOGROCKET_APP_ID=
VITE_HOTJAR_SITE_ID=

# -----------------------------------------------------------------------------
# Third-Party Integrations
# -----------------------------------------------------------------------------
VITE_MAPS_API_KEY=
VITE_WEATHER_API_KEY=
VITE_PUSH_APP_ID=

# -----------------------------------------------------------------------------
# Storage & CDN
# -----------------------------------------------------------------------------
VITE_CDN_URL=
VITE_STORAGE_URL=
VITE_MAX_UPLOAD_SIZE=50

# -----------------------------------------------------------------------------
# Caching & Performance (Relaxed for development)
# -----------------------------------------------------------------------------
VITE_CACHE_MAX_AGE=0
VITE_ENABLE_SW_CACHE=false
VITE_SWR_TIME=0

# -----------------------------------------------------------------------------
# Localization
# -----------------------------------------------------------------------------
VITE_DEFAULT_LOCALE=en-US
VITE_SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE
VITE_DEFAULT_TIMEZONE=UTC
VITE_DATE_FORMAT=US

# -----------------------------------------------------------------------------
# UI Configuration
# -----------------------------------------------------------------------------
VITE_DEFAULT_THEME=system
VITE_PRIMARY_COLOR=2563eb
VITE_REFRESH_INTERVAL=30000
VITE_MAX_ALERTS=100
VITE_CHART_ANIMATION_DURATION=300

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
BUILD_DIR=dist
GENERATE_SOURCEMAP=true
ANALYZE_BUNDLE=false

# -----------------------------------------------------------------------------
# Deployment Configuration
# -----------------------------------------------------------------------------
DEPLOY_TARGET=local
PORT=5173
HTTPS=false

# -----------------------------------------------------------------------------
# Contact & Support
# -----------------------------------------------------------------------------
VITE_SUPPORT_EMAIL=dev@localhost
VITE_DOCS_URL=http://localhost:5173/docs
VITE_STATUS_URL=http://localhost:5173/status

# -----------------------------------------------------------------------------
# Debug Options (Development only)
# -----------------------------------------------------------------------------
VITE_DEBUG_MODE=true
VITE_MOCK_API=true
VITE_LOG_LEVEL=debug
