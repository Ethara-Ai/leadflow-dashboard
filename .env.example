# ==============================================================================
# ZOOLAB DASHBOARD - ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env.local for local development or .env.production for
# production builds. Never commit files containing actual secrets!
#
# Vite exposes environment variables prefixed with VITE_ to the client-side code.
# See: https://vitejs.dev/guide/env-and-mode.html
# ==============================================================================


# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Application environment: development | staging | production
# Determines build optimizations and feature behavior
VITE_APP_ENV=development

# Display name of the application (shown in title bar, headers, etc.)
VITE_APP_NAME=ZOOLAB Dashboard

# Application version (semantic versioning recommended)
# Used for cache busting and display purposes
VITE_APP_VERSION=1.0.0

# Base URL where the application is hosted
# Used for generating absolute URLs and OAuth redirects
VITE_APP_URL=http://localhost:5173

# Base path for the application (useful when deploying to a subdirectory)
# Example: /dashboard/ if hosted at https://example.com/dashboard/
VITE_BASE_PATH=/


# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# Base URL for the backend API
# Do NOT include trailing slash
VITE_API_BASE_URL=http://localhost:3001/api

# API version prefix (e.g., v1, v2)
# Leave empty if API doesn't use versioning
VITE_API_VERSION=v1

# API request timeout in milliseconds
# Default: 30000 (30 seconds)
VITE_API_TIMEOUT=30000

# WebSocket URL for real-time updates
# Leave empty to disable WebSocket connections
# Example: wss://api.example.com/ws
VITE_WS_URL=


# ==============================================================================
# AUTHENTICATION
# ==============================================================================

# Authentication provider: local | auth0 | okta | cognito
# Determines which auth flow and configuration to use
VITE_AUTH_PROVIDER=local

# Auth provider domain (required for Auth0, Okta, Cognito)
# Example: your-tenant.auth0.com
VITE_AUTH_DOMAIN=

# OAuth Client ID from your auth provider
# Required for OAuth/OIDC authentication
VITE_AUTH_CLIENT_ID=

# API audience/identifier for the auth provider
# Required for Auth0 API authorization
VITE_AUTH_AUDIENCE=

# OAuth redirect URI after successful authentication
# Must be registered in your auth provider's allowed callbacks
VITE_AUTH_REDIRECT_URI=http://localhost:5173/callback

# Session timeout in minutes
# User will be logged out after this period of inactivity
# Default: 60 (1 hour)
VITE_SESSION_TIMEOUT=60

# Enable CSRF token protection for API requests
# Recommended: true for production
VITE_CSRF_ENABLED=true


# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable or disable specific features (true/false or 1/0)

# Dark mode theme toggle
VITE_FEATURE_DARK_MODE=true

# Data export functionality (CSV, PDF, etc.)
VITE_FEATURE_EXPORT=true

# Notes/annotations feature on dashboard items
VITE_FEATURE_NOTES=true

# Alert notifications system
VITE_FEATURE_ALERTS=true

# Charts and data visualization components
VITE_FEATURE_CHARTS=true

# Welcome message for new users
VITE_FEATURE_WELCOME_MESSAGE=true

# Progressive Web App (PWA) functionality
# Enables offline support, install prompt, etc.
VITE_FEATURE_PWA=false


# ==============================================================================
# ANALYTICS & MONITORING
# ==============================================================================

# Google Analytics 4 Measurement ID
# Example: G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=

# Sentry DSN for error tracking
# Example: https://xxx@xxx.ingest.sentry.io/xxx
VITE_SENTRY_DSN=

# Sentry environment tag for filtering errors
# Should match VITE_APP_ENV
VITE_SENTRY_ENVIRONMENT=development

# Enable performance monitoring (Web Vitals, etc.)
# May impact performance; use in production with caution
VITE_ENABLE_PERFORMANCE_MONITORING=false

# LogRocket App ID for session recording
# Example: org/app-name
VITE_LOGROCKET_APP_ID=

# Hotjar Site ID for heatmaps and recordings
# Example: 1234567
VITE_HOTJAR_SITE_ID=


# ==============================================================================
# THIRD-PARTY INTEGRATIONS
# ==============================================================================

# Google Maps API Key (for map components)
# Get from: https://console.cloud.google.com/apis/credentials
VITE_MAPS_API_KEY=

# Weather API Key (for weather widgets)
# Example: OpenWeatherMap, WeatherAPI, etc.
VITE_WEATHER_API_KEY=

# Push notification service App ID
# Example: OneSignal, Pusher, etc.
VITE_PUSH_APP_ID=


# ==============================================================================
# STORAGE & CDN
# ==============================================================================

# CDN URL for static assets
# Leave empty to serve assets from the application
# Example: https://cdn.example.com/assets
VITE_CDN_URL=

# Cloud storage URL for user uploads
# Example: https://storage.example.com
VITE_STORAGE_URL=

# Maximum file upload size in MB
# Default: 10 MB
VITE_MAX_UPLOAD_SIZE=10


# ==============================================================================
# CACHING & PERFORMANCE
# ==============================================================================

# Default cache max-age in seconds
# Default: 86400 (24 hours)
VITE_CACHE_MAX_AGE=86400

# Enable Service Worker caching
# Requires VITE_FEATURE_PWA=true to fully work
VITE_ENABLE_SW_CACHE=true

# Stale-While-Revalidate time in seconds
# Time to serve stale content while fetching fresh data
# Default: 3600 (1 hour)
VITE_SWR_TIME=3600


# ==============================================================================
# LOCALIZATION
# ==============================================================================

# Default locale (BCP 47 language tag)
# Example: en-US, fr-FR, de-DE, ja-JP
VITE_DEFAULT_LOCALE=en-US

# Comma-separated list of supported locales
# Used for language switcher and validation
VITE_SUPPORTED_LOCALES=en-US

# Default timezone (IANA timezone identifier)
# Example: UTC, America/New_York, Europe/London
VITE_DEFAULT_TIMEZONE=UTC

# Date format style: US (MM/DD/YYYY) | EU (DD/MM/YYYY) | ISO (YYYY-MM-DD)
VITE_DATE_FORMAT=US


# ==============================================================================
# UI CONFIGURATION
# ==============================================================================

# Default theme: light | dark | system
# "system" follows the user's OS preference
VITE_DEFAULT_THEME=system

# Primary brand color (hex without #)
# Used for buttons, links, accents
# Default: 2563eb (Tailwind blue-600)
VITE_PRIMARY_COLOR=2563eb

# Dashboard data refresh interval in milliseconds
# Default: 60000 (1 minute)
VITE_REFRESH_INTERVAL=60000

# Maximum number of alerts to display
# Older alerts will be archived
VITE_MAX_ALERTS=50

# Chart animation duration in milliseconds
# Set to 0 to disable animations
VITE_CHART_ANIMATION_DURATION=300


# ==============================================================================
# SUPPORT & CONTACT
# ==============================================================================

# Support email address (displayed in help sections)
VITE_SUPPORT_EMAIL=support@zoolab.example.com

# Documentation URL
# Example: https://docs.example.com
VITE_DOCS_URL=

# System status page URL
# Example: https://status.example.com
VITE_STATUS_URL=


# ==============================================================================
# DEBUG & DEVELOPMENT
# ==============================================================================
# ⚠️  These should be false/disabled in production!

# Enable debug mode (verbose logging, dev tools)
# WARNING: Never enable in production
VITE_DEBUG_MODE=false

# Use mock API responses instead of real backend
# Useful for frontend development without backend
VITE_MOCK_API=false

# Logging level: debug | info | warn | error
# "debug" shows all logs, "error" shows only errors
VITE_LOG_LEVEL=warn
